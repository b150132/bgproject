<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:onClick="onSignUpClick"
    android:background="@drawable/bg">
    <ScrollView
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        >
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="250sp"
                    android:layout_height="match_parent">

                    <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="中文姓名"
                android:id="@+id/textView4" />

                    <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TFName" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="130sp"
                        android:layout_height="80sp"
                        android:id="@+id/imgviewHead"
                        android:src="@drawable/default_image"
                        android:layout_weight="1"
                        android:layout_gravity="right"
                        android:scaleType="fitXY" />
                </FrameLayout>

            </LinearLayout>

            <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="生日"
        android:id="@+id/textView5" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/TFEmail"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="地址"
        android:id="@+id/textViewAddress" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/TFAddress"
        android:layout_gravity="right" />

        <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textAppearance="?android:attr/textAppearanceLarge"
           android:text="電話"
           android:id="@+id/textViewPhone" />

        <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:inputType="textEmailAddress"
           android:ems="10"
           android:id="@+id/TFPhone"
           android:layout_gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="目前職業(公司成立派遣或合作用)"
        android:id="@+id/textViewJob" />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerJobtype"
        android:entries="@array/jobtype_list"
        android:spinnerMode="dropdown"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right"
        android:layout_centerVertical="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/TFJob"
        android:layout_gravity="right"
        android:visibility="invisible"/>
    <CheckBox
        android:id="@+id/Carcheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="申請使用本APP司機功能(提高您的載客量!)"
        android:checked="false" />
    <CheckBox
        android:id="@+id/Shopcheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="申請使用本APP店家功能(提高您的商品曝光度!)"
        android:checked="false" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="上傳計程車照片"
            android:id="@+id/textViewTexiPhoto" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120sp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/TexiPhoto"
            android:layout_gravity="right"
            android:src="@drawable/uploadcommodity" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="介紹人會員編號(需驗證)"
        android:id="@+id/textViewFinder" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/TFFounder"
        android:layout_gravity="right" />

        <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textAppearance="?android:attr/textAppearanceLarge"
               android:text="Line ID or 微信 ID "
               android:id="@+id/textViewLine"
               android:hint="擇一填寫,微信請加註@號"/>

        <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:inputType="textEmailAddress"
               android:ems="10"
               android:id="@+id/TFLine"
               android:layout_gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="帳戶名稱(登入用)*必填"
        android:id="@+id/textView6"
        android:textColor="#fffbf5f8"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TFUsername"
        android:digits="1234567890qwertyuiopasdfghjklzxcvbnm"
        android:hint="請填英數字"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="帳戶密碼(登入用)*必填"
        android:id="@+id/textView7"
        android:textColor="#fffbf4f4"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TFPassword"
        android:digits="1234567890qwertyuiopasdfghjklzxcvbnm"
        android:hint="請填英數字"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="密碼確認"
        android:id="@+id/textView8"
        android:textColor="#fffdf8fc"
        android:digits="1234567890qwertyuiopasdfghjklzxcvbnm"
        android:hint=""/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TFPassword2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="注意: 此為暫時性資料,日後將有可能更新"
                android:id="@+id/textView26"
                android:layout_gravity="center_horizontal"
                android:textColor="#fffdf5fd" />

            <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="註冊完成"
        android:id="@+id/BSignbutton"
        android:onClick="onSignUpClick"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>>
    </ScrollView>

</LinearLayout>
