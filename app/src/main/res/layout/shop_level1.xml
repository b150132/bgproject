<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"  >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
        android:id="@+id/imgTitle"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:scaleType="fitStart"
        android:layout_gravity="center"
            android:src="@drawable/buy_1_0"
            android:onClick="onClick" />

        <ImageButton
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:id="@+id/btnback"
            android:src="@drawable/undo"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:layout_marginLeft="10sp"
            android:onClick="onButtonClick"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="3sp" />
    </RelativeLayout>

    <com.lytech.rainsilk.webviewapp.MyScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >





            <!--<include-->
                <!--android:id="@+id/buy"-->
                <!--layout="@layout/buy_check" />-->

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <TableRow>
                    <ImageView
                        android:layout_width="180sp"
                        android:layout_height="100sp"
                        android:id="@+id/imv3"
                        android:src="@drawable/buy_1_2"
                        android:layout_weight="1"
                        android:onClick="onClick" />

                    <ImageView
                        android:layout_width="180sp"
                        android:layout_height="100sp"
                        android:id="@+id/imv4"
                        android:src="@drawable/buy_1_1"
                        android:layout_weight="1"
                        android:onClick="onClick" />

                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="招牌排骨"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" />
                    <TextView
                        android:id="@+id/tv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="特級排骨"
                        android:layout_span="2"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/tvcost1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="90元"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" />
                    <TextView
                        android:id="@+id/tvcost2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100元"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" />

                </TableRow>
            </TableLayout>
            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <TableRow>
                    <ImageView
                        android:layout_width="180sp"
                        android:layout_height="100sp"
                        android:id="@+id/imv1"
                        android:src="@drawable/buy_1_2"
                        android:layout_weight="1"
                        android:onClick="onClick" />

                    <ImageView
                        android:layout_width="180sp"
                        android:layout_height="100sp"
                        android:id="@+id/imv2"
                        android:src="@drawable/buy_1_1"
                        android:layout_weight="1"
                        android:onClick="onClick" />

                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="招牌排骨"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" />
                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="特級排骨"
                        android:layout_span="2"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/tvcost4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="90元"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" />
                    <TextView
                        android:id="@+id/tvcost3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100元"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" />

                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <TableRow>
                    <ImageView
                        android:layout_width="180sp"
                        android:layout_height="100sp"
                        android:id="@+id/imv5"
                        android:src="@drawable/buy_1_2"
                        android:layout_weight="1"
                        android:onClick="onClick" />

                    <ImageView
                        android:layout_width="180sp"
                        android:layout_height="100sp"
                        android:id="@+id/imv6"
                        android:src="@drawable/buy_1_1"
                        android:layout_weight="1"
                        android:onClick="onClick" />

                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/Button1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="招牌排骨"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" />
                    <TextView
                        android:id="@+id/Button2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="特級排骨"
                        android:layout_span="2"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/Button3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="90元"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" />
                    <TextView
                        android:id="@+id/Button4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100元"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" />

                </TableRow>
            </TableLayout>


        </LinearLayout>
    </com.lytech.rainsilk.webviewapp.MyScrollView>

</LinearLayout>
